# Shell configuration - use Homebrew path
{{ if eq .chezmoi.os "darwin" -}}
{{ if eq .chezmoi.arch "arm64" -}}
shell /opt/homebrew/bin/fish
{{- else -}}
shell /usr/local/bin/fish
{{- end }}
{{- else -}}
shell /home/linuxbrew/.linuxbrew/bin/fish
{{- end }}

include ./kanagawa.conf

# Font configuration
font_family      IosevkaTerm Nerd Font Mono
font_size        14

# Rendering
adjust_line_height 110%
adjust_column_width 100%
disable_ligatures never

# Transparency settings
background_opacity 1.0
dynamic_background_opacity no

# Window borders (subtle, VSCode-like)
window_border_width 1pt
draw_minimal_borders yes
active_border_color #232330
inactive_border_color #222229

# Tab title - shows current folder name
tab_title_template "{fmt.fg.red}{bell_symbol}{activity_symbol}{fmt.fg.tab}{(tab.active_wd or title).rsplit('/')[-1]}"

# Keybinding for project sessionizer
map ctrl+shift+p launch --type=overlay fish -c "workon"
